
</h1>Create a new historical figure</h1></br>
</br>
<form action="/figures" method="post">
<label for="figure_name">Figure Name: </label>
<input type="text" name="figure[name]" id="Name">
</br>
<h2>Titles</h2></br>

<% Title.all.each do |title| %>
     <input type="checkbox" id="<%= title.name %>" name="figure[titles][]" value="<%= title.id %>"><%= title.name %></br>
<% end %>

<h2> Create New Title: </h2>
<input type="text" name="title[name]" id="Name">

<h2>Landmarks</h2>
<% Landmark.all.each do |landmark| %>
     <input type="checkbox" id="<%= landmark.name %>" name="figure[landmark][]" value="<%= landmark.id %>"><%= landmark.name %></br>
<% end %>

<h2>Create New Landmark </h2>
    <input type="text" name="landmark[name]" id="Name">


</form>
