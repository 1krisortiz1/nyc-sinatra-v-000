<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%=@figure.slug%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch"></input>

<label for="name">Figure Name: </label>
<input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">

<label for="title">Title</label>
<%Title.all.each do |title| %>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
<% end %>

<% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="landmark[]" id="<%= landmark.name %>" value="<%= landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%>
<% end %>
</br>
Title: <input type="text" name="figure[title_ids][]" value="<%= @figure.titles.name%>">



<input type="submit" value="Update Figure">
</form>
