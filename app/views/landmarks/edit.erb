<h2>Edit Historical <%=@landmark.name %></h2>

<form action="/landmarks/<%= @landmark.slug %>">
    <input type="hidden" name="_method" value="patch">

    <label for="name">Landmark Name: </label>
    <input type="text" name="landmark[name]" id="name"value="<%= @landmark.name%>">


    <input type="text" name="landmark[year_completed]" id="landmark_year_completed" value="<%=@landmark.year_completed %>">

    <input type="text" name="landmark[figure]" id="new_figure" value="<%= @figure.name %>">

    <input type="submit" name="Edit" id="Edit Landmark">

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
